<%- include('../partials/header') -%>
<%- include('../partials/sidebar') -%>

	<div class="col">
		<h2>Add Student</h2>
		<hr>
		<div class="container">
		<form action="/students" method="POST">
			<div class="form-group">
				<label for="name">Full Name</label>
				<input type="text" class="form-control" id="name" name="student[name]">
			</div>

			<div class="form-group">
				<label for="birthDate">Date of Birth</label>
				<input class="form-control" id="birthDate" type="date" name="dateOfBirth">
			</div>

			<label for="nameOfSchool">School</label>
			<select class="form-control mb-3" name="student[school]" id="nameOfSchool">
			    <option value="">--Please choose an option--</option>
			    <option>Kendriya Vidyalaya</option>
			    <option>Don Bosco</option>
			    <option>Little Flower High School</option>
			    <option>Delhi Public School</option>
			    <option>St. Xavier's</option>
			    <option>Muljibai</option>
			    <option>Dhirubhai Ambani International School</option>
			    <option>St. Mari's</option>
			    <option>Sardar Patel Vidyalaya</option>
			    <option>Vasant Valley School</option>
		    </select>

		    <label for="nameOfClass">Class</label>
		    <select class="form-control mb-3" name="student[class]" id="nameOfClass">
			    <option value="">--Please choose an option--</option>
			    <option>1</option>
			    <option>2</option>
			    <option>3</option>
			    <option>4</option>
			    <option>5</option>
			    <option>6</option>
			    <option>7</option>
			    <option>8</option>
			    <option>9</option>
			    <option>10</option>
		    </select>

		    
		    <label for="divisionNumber">Division</label>
		    <select class="form-control mb-3" name="student[division]" id="divisionNumber">
			    <option value="">--Please choose an option--</option>
			    <option>A</option>
			    <option>B</option>
			    <option>C</option>
			    <option>D</option>
			    <option>E</option>
		    </select>

		    <div>Status</div>
		    <div class="custom-control custom-radio custom-control-inline">
			  <input class="custom-control-input" type="radio" id="active" name="student[status]" value="Active"
			         checked>
			  <label class="custom-control-label" for="active">Active</label>
			</div>

			<div class="custom-control custom-radio custom-control-inline">
			  <input class="custom-control-input" type="radio" id="inactive" name="student[status]" value="Inactive">
			  <label class="custom-control-label" for="inactive">Inactive</label>
			</div>

			<input class="btn btn-primary d-block mt-2" type="submit" value="Save">
		</form>
		</div>
	</div>

<%- include('../partials/footer') -%>